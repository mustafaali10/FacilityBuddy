<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FacilityBuddy" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="android:windowFullscreen">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/hospital_teal</item>
        <item name="android:navigationBarColor">@color/hospital_teal</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="Theme.FacilityBuddy" parent="Base.Theme.FacilityBuddy" />

    <style name="TabLayoutTextStyle">

        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>

    </style>
</resources>